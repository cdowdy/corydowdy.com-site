<!doctype html>
<html class="no-js" lang="{{ htmllang() }}">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    {# make sure we always display a proper title: The record's title if there is one, appended with the
       sitename. If there is no title, we append the sitename with the payoff, if there is one. #}
    <title>
      {% if record.title is defined %}{{ record.title|striptags }} | {% endif %}
      {{ app.config.get('general/sitename') }}
      {% if record.title is not defined and app.config.get('general/payoff') %} | {{ app.config.get('general/payoff') }}{% endif %}
    </title>

    {# paths.theme is always a correct path to the current theme. Even if you rename the theme-folder,
       this will keep working. See the documentation on paths: http://docs.bolt.cm/internals#paths #}
      <link rel="stylesheet" href="{{ paths.theme }}css/blog.min.css" />
    <script type="text/javascript" src="//use.typekit.net/vdn5jzd.js"></script>
    <script type="text/javascript">try{Typekit.load();}catch(e){}</script>

</head>
<body>
<div class="off-canvas-wrap">
  <div class="inner-wrap">
    <div class="hide--small">
      <nav id="bt-menu" class="bt-menu">
        <a href="#" class="bt-menu-trigger"><span>Menu</span></a>
          {{ menu('main', '_menu_main.twig') }}
        <ul>
          <li><a href="https://github.com/cdowdy" class="bt-icon icon-github">Code Hosted @ Github</a></li>
        </ul>
      </nav>
      <div class="row">
        <div class="small-10 columns">
            <h1 class="header_logo"><a href="/"><img src="{{ paths.theme }}img/logo.svg" alt="logo"/> <small>//blog</small></a></h1>
        </div>
      </div>
    </div><!-- .hide--small -->
    <div class="hide--large">
      <nav class="tab-bar">
        <section class="left-small">
          <a class="left-off-canvas-toggle menu-icon" ><span></span></a>
        </section>
        <section class="middle tab-bar-section">
          <h1 class="title"><a href="/">CoryDowdy <small>//blog</small></a></h1>
        </section>
      </nav>
    </div>


    <!-- Off Canvas Menu -->
    <aside class="left-off-canvas-menu">
        {{ menu('main', '_menu_offcanvas.twig') }}
    </aside>

    <section class="main-section">