{% extends 'base.html.twig' %}
{% block enhance_js_meta %}
    {{ parent() }}
    <meta name="fulljs"  content="{{ paths.theme }}js/blog-entries.21-08-2014.js">
{% endblock %}

{% block inlined_styles %}
    <style>
        {% include 'css/critical-css/blog-pagespeed-critical.css' %}
    </style>
{% endblock %}


{% block body %}
    <article class="push-down full">
        <header class="centered-header">
            <h3>{{ record.title }}</h3>
            <h6 class="pub-date">{% set recdate = record.datepublish|localdate("%A %B %e, %Y") %}
                {{ __('%date%',{'%date%': recdate }) }}</h6>
            <hr/>
        </header>
        {{ record.body }}
    </article>
{% endblock %}

{% block footer_javascripts %}
    {{ parent() }}
    <script src="{{ paths.theme }}js/prism/prism.js"></script>
{% endblock %}