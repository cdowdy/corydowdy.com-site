{% include 'headers/_blog-header.twig' %}

<section class="row container">
    <div class="small-12 columns" role="content">
        <article>

            <h2>{{ record.title }}</h2>



            {# display something introduction-like.. #}
            {% if record.introduction %}
            {{ record.introduction }}
            {% elseif record.teaser %}
                {{ record.teaser }}
            {% else %}
                <p>{{ record.excerpt(1000) }}</p>
            {% endif %}

            {# if the entry has a video, display it. #}
            {% if record.video is not empty %}
                {{ record.video.responsive }}
            {% endif %}

            {{ record.body }}



        </article>


    </div>


</div>

<!-- End Main Content and Sidebar -->
{{ print(record) }}


{% include 'blog/_blog-post-footer.twig' %}
